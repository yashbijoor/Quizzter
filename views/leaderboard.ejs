<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leaderboard</title>
    <link rel="stylesheet" href="css/style3.css" />
  </head>
  <body>
    <nav class="nav">
      <div class="logo"></div>
      <div class="title">QUIZZTER</div>
      <div class="hamburger">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
      </div>
      <ul class="nav-list">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </nav>
    <div class="wrapper-wrapper">
      <div class="wrapper">
        <div class="leaderboard-wrapper">
          <table>
            <tr>
              <th>Username</th>
              <th>Highscore</th>
            </tr>
            <% for(i=0; i< count; i++){ %> <% if(docs[i].email === user) { %>
            <tr style="background-color: #f8f9fa; color: #1f1f1f">
              <td><%= docs[i].name %></td>
              <td><%= docs[i].highscore %></td>
            </tr>
            <% } else { %>
            <tr>
              <td><%= docs[i].name %></td>
              <td><%= docs[i].highscore %></td>
            </tr>
            <% } %> <% } %>
          </table>
        </div>
      </div>
    </div>
    <script src="index.js"></script>
  </body>
</html>
